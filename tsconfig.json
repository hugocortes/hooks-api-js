{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "lib/**/**.ts",
    "test/**/**.ts"
  ],
  "exclude": [
    "node_modules",
    "*.d.ts"
  ]
}
